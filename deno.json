{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --unstable-kv api.ts",
    "cache": "deno cache api.ts",
    "test": "DENO_ENV=test deno test --allow-net --allow-env --unstable-kv tests/",
    "start": "deno run --allow-net --allow-env --unstable-kv api.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.201.0/"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": false
    }
  }
}
